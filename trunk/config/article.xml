<?xml version='1.0'?>
<!-- Interface main configuration file -->
<!--  each config file begins with the config tag -->
<config>

<!-- An example article table -->
<table id='article'>



<title><fr>Article</fr></title>
<help><fr>Les articles contiennent du texte et des images</fr></help>

<title_field>title</title_field>

<field id="id">
<type>id</type>
</field>




<field id="title">
<title><fr>Titre</fr></title>
<help><fr>Un titre court est plus percutant</fr></help>
<type>string</type>
<is_title>true</is_title>

<use>
<list>true</list>
<edit>true</edit>
</use>

</field>




<field id="intro">
<title><fr>Introduction</fr></title>
<help><fr>Introduction courte Ã  l'article</fr></help>
<type>text</type>
</field>



<field id="body">

<title><fr>Corps du texte</fr></title>
<help><fr>Regardez dans l'aide pour ajouter des images</fr></help>
<type>richtext</type>
<engine>fckeditor</engine>
<!--<engine>tinymce</engine>-->
</field>



</table>
</config>

