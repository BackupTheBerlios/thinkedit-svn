<?xml version='1.0'?>
<!-- Interface main configuration file -->
<!--  each config file begins with the config tag -->
<config>

<!-- this one will store the main tree of the site -->
<table id="node">

<field id="id">
<type>id</type>
<primary>true</primary>
<is_title>true</is_title>
</field>

<field id="parent_id">
<type>int</type>
<is_title>true</is_title>
</field>


<field id="object_class">
<is_title>true</is_title>
<type>string</type>
</field>

<field id="object_type">
<is_title>true</is_title>
<type>string</type>
</field>

<field id="object_id">
<is_title>true</is_title>
<type>text</type>
</field>

<field id="sort_order">
<type>order</type>
</field>


<field id="template">
<type>template</type>
</field>

<field id="publish">
<type>publish</type>
</field>



</table>

</config>
