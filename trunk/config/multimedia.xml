<?xml version='1.0'?>
<!-- Interface main configuration file -->
<!--  each config file begins with the config tag -->
<config>

<!-- An example article table -->
<table id='multimedia'>

<title><fr>Elément multimédia</fr></title>
<help><fr>Un élément multimédia peut être un film, un son, une musique, etc... Attachez un fichier à cet élément pour qu'il soit disponible en téléchargement</fr></help>
<icon>video-x-generic.png</icon>

<title_field>title</title_field>

<field id="id">
<type>id</type>
</field>

<field id="title">
<title><fr>Titre</fr></title>
<help><fr>Un titre court est plus percutant</fr></help>
<type>string</type>
<is_title>true</is_title>
</field>

<field id="intro">
<title><fr>Introduction</fr></title>
<help><fr>Introduction courte</fr></help>
<type>text</type>
</field>

<field id="body">
<title><fr>Corps du texte</fr></title>
<help><fr>Regardez dans l'aide pour ajouter des images</fr></help>
<type>richtext</type>
</field>

<field id="cover">
<title><fr>Image de couverture</fr></title>
<help><fr></fr></help>
<type>image</type>
</field>

</table>
</config>

