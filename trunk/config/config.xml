<?xml version='1.0'?>
<!-- Interface main configuration file -->
<!--  each config file begins with the config tag -->
<config>






<!-- a many to many relation is built by using a table with two lookup columns -->
		<table id="articles2authors">

				<field id="id">
						<type>id</type>
						<primary>true</primary>
				</field>

				<field id="author_id">
						<type>lookup</type>

						<source>
								<type>table</type>
								<name>author</name>
						</source>

				</field>


				<field id="article_id">
						<type>lookup</type>

						<source>
								<type>table</type>
								<name>article</name>
						</source>

				</field>
		</table>









<!--  site-wide configuration -->
<site>
				<help>
						<fr>Bienvenue sur Thinkedit, le système de gestion de données et de contenu facile à utiliser</fr>
				</help>

<!-- available locales for this site -->

				<locale id="fr">
						<help>
								<fr>Fran&#231;ais</fr>
								<en>French</en>
						</help>
				</locale>

				<locale id="en">
						<help>
								<fr>Anglais</fr>
								<en>English</en>
						</help>
				</locale>




</site>

<!-- not used but may be used for incompatible servers, when path autodetect doesn't work -->
