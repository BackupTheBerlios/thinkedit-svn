<?xml version='1.0'?>
<!-- Interface main configuration file -->
<!--  each config file begins with the config tag -->
<config>

<!-- An example article table -->
<table id='publication'>



<title><fr>Publication</fr></title>
<help><fr></fr></help>
<icon>book.png</icon>
<title_field>title</title_field>

<field id="id">
<type>id</type>
</field>




<field id="title">
<title><fr>Titre</fr></title>
<help><fr>Un titre court est plus percutant</fr></help>
<type>string</type>
<is_title>true</is_title>
</field>

<field id="intro">
<title><fr>Introduction</fr></title>
<help><fr>Introduction courte à la publication</fr></help>
<type>richtext</type>
</field>


<field id="body">
<title><fr>Corps du texte</fr></title>
<help><fr>Texte plus long (si nécessaire)</fr></help>
<type>richtext</type>
</field>

<field id="cover">
<title><fr>Couverture</fr></title>
<help><fr></fr></help>
<type>file</type>
</field>


<field id="publication">
<title><fr>Date de publication</fr></title>
<help><fr>Il faut pour le moment mettre aaaa-mm-jj (année, mois, jour)</fr></help>
<type>date</type>
</field>


</table>
</config>

